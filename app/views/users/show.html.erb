<div class="box">
  <h3 class><%= t(".welcome") %></h3>
    <p><%= t(".name") %> :<%= current_user.name %></p>
    <p><%= t(".email") %> :<%= current_user.email %></p>
    <div class="button"><%= link_to t(".edit"), edit_users_path %></div>
</div>
<div>
  <table>
    <caption><%= t(".expenses") %></caption>
    <thead>
      <tr>
        <th>
          <%= t("expenses.defaults.name") %>
        </th>
        <th>
          <%= t("expenses.defaults.bill_estimate") %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr id="expense_<%= expense.id %>">
          <td>
            <%= expense.name %>
          </td>
          <td>
            <%= number_to_currency(expense.bill_estimate) %>
          </td>
        </tr>
      <% end %>
      <tr>
        <td>
          <%= t(".expenses_total") %>
        </td>
        <td>
          <%= number_to_currency(@expenses_total) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
