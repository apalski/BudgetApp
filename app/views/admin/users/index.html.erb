<table>
  <caption><%= t(".title") %></caption>
  <thead>
    <tr>
      <th>
        <%= t(".name") %>
      </th>
      <th>
        <%= t(".email") %>
      </th>
      <th>
        <%= t(".admin") %>
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id="user_<%= user.id %>">
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.admin? %>
        </td>
        <td>
          <%= link_to t(".links.delete"), admin_user_path(user), method: :delete %>
          <%= link_to t(".links.edit"), edit_admin_user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
